@import "./mixins"

*
  margin 0px
  padding 0px

html, body
  height 100%

// Links
a
  color dblue
  text-decoration none
  &:hover
    text-decoration underline

// Text boxes
input[type="text"], input[type="password"], input[type="email"]
  border 1px solid #d4d4d4
  border-radius 5px
  box-shadow inset 0px 1px 1px rgba(black, 0.25)
  color #444
  font-size 110%
  padding 8px
  
  &:focus
    border-color #aaa
    outline none


// Buttons
button, input[type="submit"], .button
  background linear-gradient(top, #eee, #ddd)
  border-top 1px solid #ddd
  border-left 1px solid #ddd
  border-right 1px solid #ccc
  border-bottom 3px solid #ccc
  border-radius 6px
  color #3f3f3f
  cursor pointer
  font-weight bold
  padding 8px 16px
  text-shadow 0px 1px 0px white
  user-select none
  
  &:hover
    background linear-gradient(top, #eee, #e1e1e1)
    text-decoration none
  &:active
    background linear-gradient(top, #ddd, #e0e0e0)
    color #222
  &:focus
    outline 5px auto dblue
  
  &.primary
    l = darken(dblue, 10%)
    d = darken(dblue, 30%)
    background linear-gradient(top, dblue, darken(dblue, 20%))
    border-color l d d l
    box-shadow 0px 2px 3px rgba(black, 0.4)
    color white
    text-shadow 0px 1px 1px rgba(black, 0.6), 0px -1px 1px rgba(black, 0.2)
    
    &:hover
      background linear-gradient(top, lighten(dblue, 5%), darken(dblue, 15%))
    &:active
      background linear-gradient(top, darken(dblue, 20%), darken(dblue, 15%))
      border-color d darken(l, 10%) darken(l, 10%) d
      color #eee
    &:focus
      box-shadow 0px 0px 2px 1px oj
      outline none
  
   &:active
    border-width 3px 1px 1px 1px
    border-color #ccc
    box-shadow inset 0px 1px 2px rgba(black, 0.4)


input[type="checkbox"]
  background white
  border 1px solid #aaa
  border-radius 3px
  box-shadow inset 0px 1px 1px rgba(black, 0.3)
  cursor pointer
  height 16px
  margin-right 6px
  relative top 2px
  width 16px
  -webkit-appearance none
  
  &:not(:checked):active
    background lighten(dblue, 70%)
  
  &:checked
    background linear-gradient(top, lighten(dblue, 10%), dblue)
    border-color darken(dblue, 20%)
    
    check-color = darken(dblue, 60%)
    &::after, &::before
      background check-color
      content ' '
    
    // The long stroke of the check mark
    &::after
      absolute top 0px left 7px
      height 14px
      width 3px
      transform rotate(45deg)
    
    // The short stroke of the check mark
    &::before
      absolute top 5px left 2px
      height 8px
      width 3px
      transform rotate(-45deg)
      

label
  cursor pointer
  font-size 90%
  user-select none

// Custom scrollbars for webkit browsers.
*::-webkit-scrollbar
  height 10px
  width 10px

*::-webkit-scrollbar-track
  background white
  box-shadow inset 1px 1px 2px rgba(black, 0.2)

*::-webkit-scrollbar-thumb
  background #ccc
  box-shadow inset 1px 0px 2px rgba(black, 0.2)

*::-webkit-scrollbar-thumb:hover
  background #aaa
  box-shadow inset 1px 1px 3px rgba(black, 0.2)

::selection, ::-moz-selection
  background #666
  color white

