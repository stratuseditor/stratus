@import "../../mixins"

// The container for diffs.
// The right column.
.stratus-git-diffs
  border-left 1px solid #ddd
  bottom 0px
  box-shadow 0px 0px 1px rgba(black, 0.1)
  overflow auto
  > ul
    list-style none


// The file name of the diff.
.stratus-git-diff-path
  background linear-gradient(top, #f8f8f8, #e4e4e4)
  border-bottom 1px solid #ccc
  color #222
  cursor pointer
  font-size 14px
  font-weight bold
  padding 9px 16px
  text-shadow 0px 1px 0px white
  user-select none

// A plus or minus sign indicating a created or deleted file.
.status-git-diff-add, .status-git-diff-rm
  float right
  font-size 27px
  margin-top -7px

// Indicate a new file.
.status-git-diff-add
  color #252

// Indicate a deleted file.
.status-git-diff-rm
  color #522

// The file contents.
.stratus-git-diff-data
  background white
  border-bottom 1px solid #ddd
  font-family monospace
  overflow auto
  > table
    border-collapse collapse
    color #333
    display inline-block
    margin-bottom -4px
    white-space pre


// Green: The Inserted lines.
.stratus-diff-insert
  background #dfd
  color #020
  width 100%

// Red: Removed lines.
.stratus-diff-delete
  background #fdd
  color #200
  width 100%

// The "@@ -28,6 +28,16 @@" lines.
.stratus-diff-comment
  color #999

// Stratus git gutter.
.sgg
  background #fbfbfb
  border-right 1px solid #ddd
  color #888
  text-align right
  text-transform uppercase
  user-select none
  vertical-align top
  
  // The "OLD" or "NEW" header.
  &.head
    background linear-gradient(top, #f4f4f4, #e5e5e5)
    font-size 70%
    padding 6px 7px
    &:first-child
      border-right none



