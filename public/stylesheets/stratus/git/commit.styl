@import '../../mixins'

left-col-width = 400px

.stratus-git-commit
  background #f4f4f4
  font-family sans-serif
  height 100%
  position relative
  width 100%
  
  // The left column of the commit view.
  // This contains the message and unstaged files.
  > .body
    absolute top 0px left 0px
    bottom 0px
    overflow auto
    padding-top 5px
    width left-col-width + 10px
    > h1
      color #444
      display inline-block
      font-size 13px
      font-weight normal
      relative top 4px left 5px
      text-shadow 0px 1px 0px white
  
  .stratus-git-diffs
    absolute top 0px right 0px
    left left-col-width + 20px


// The button to create the commit.
.stratus-git-commit-changes
  float right


// The textarea containing the commit message.
.stratus-git-commit-message
  > textarea, > input
    border 1px solid #ccc
    border-radius 0px
    box-shadow inset 0px 1px 2px rgba(black, 0.2)
    color #333
    font-family sans-serif
    font-size 14px
    margin 4px
    padding 2px 4px
    width left-col-width - 8px
    &:focus
      border-color #999
      outline none
  
  > textarea
    height 100px


// A list of files to add.
.stratus-git-commit-unstaged
  background white
  border 1px solid #ccc
  box-shadow inset 0px 1px 1px rgba(black, 0.2)
  color #333
  font-size 90%
  list-style none
  margin 4px
  width left-col-width
  
  li
    > label
      cursor pointer
      display block
      font-size 14px
      white-space nowrap
    &:not(.stratus-git-commit-all)
      > label
        border-bottom 1px solid #eee
        padding 5px 6px 7px
      &:hover
        background rgba(black, 0.04)
    
    .create, .delete
      color white
      border-radius 5px
      font-size 11px
      font-weight bold
      float right
      padding 4px 0px
      text-align center
      text-transform uppercase
      width 70px
    .create
      background #76b63f
    .delete
      background #b33


// The checkbox to do a `git commit -a`
.stratus-git-commit-all
  background linear-gradient(top, #f5f5f5, #eee)
  border-bottom none
  box-shadow 0px 1px 1px rgba(black, 0.3)
  position relative
  
  &::after
    absolute top 90% left 50%
    color #eee
    content 'â–¼'
    text-shadow 0px 2px 1px rgba(black, 0.4)
    transform translateX(-50%)
  
  > label
    padding 8px
    padding-left 6px
    > h1
      color #222
      display inline
      font-size 100%
      font-weight bold
