@import '../mixins'


.stratus-cursor-coords
  border-left 1px solid #ccc
  color #444
  fixed top 0px right 0px
  font-family sans-serif
  font-size 80%
  padding 2px 4px 5px
  text-shadow 0px 1px 0px white
  user-select none
  &::before
    content '('
  &::after
    content ')'

// The current editor's cursor row.
.stratus-cursor-row
  &::after
    content ', '
  
