@import "../../mixins"

// Projects bubble.
section.projects
  // The actual project list.
  > .bubble
    width 500px
  
    .filter
      background linear-gradient(top, #f8f8f9, #fafafb)
      border-bottom 1px solid #ddd
      height 50px
      position relative
      
      input
        absolute top 10px left 10px
        bottom 10px
        right 10px
        padding 6px 4px
    
    > ul
      background white
      height 273px
      list-style none
      overflow-y auto
      
      .project > a
        background white
        border-bottom 1px solid #e5e5e5
        display block
        padding 10px
        text-shadow 0px 1px 1px white
        
        // The lock icon
        > .symbol
          color #555
          float right
      
      .project.current > a
        background #e0e0e0
      .project > a:active
        background #f3f3f3
        box-shadow inset 1px 1px 2px rgba(black, 0.1)
      
    
    .new-project
      float right
      font-weight bold
      margin 6px
    
    > footer
      height 50px
  
  // Various links
  > nav
    display inline-block
    margin-top 16px
    width 33%
    li
      list-style none
      padding-left 16px
    a
      color #999
      display block
      transition all 80ms linear
      
      &:hover
        color #444
        text-decoration none
  
