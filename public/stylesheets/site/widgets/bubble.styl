@import '../../mixins'

.bubble
  background linear-gradient(top, #f6f6f6, #eaeaea)
  box-shadow 0px 2px 4px rgba(black, 0.4)
  border-radius 8px
  
  > header
    border-bottom 1px solid #ccc
    padding 10px 16px 8px 16px
    text-align center
    user-select none
    
    h1, h2
      display inline
      font-size 130%
      text-shadow 0px 1px 0px white
    
    h1
      color #52595D
    h2
      color #99a4aa
      margin 0px 6px
  
  > footer
    background transparent//#efefef
    border-top 1px solid #ddd
    display block
    min-height 14px
    margin-top -1px

.bubble-center
  fixed top 50% left 50%
  transform translate(-50%, -50%)
  transition all 150ms linear

